<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      app:cardElevation="2dp"
      app:cardMaxElevation="4dp"
      app:cardCornerRadius="@dimen/dimen_small"
      android:layout_marginTop="@dimen/dimen_small"
      android:layout_marginEnd="2dp"
      android:layout_marginStart="2dp"
      app:cardBackgroundColor="@color/colorWhite">

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/his_name"
                  android:text="name"
                  android:padding="@dimen/dimen_small"
                  android:layout_marginTop="@dimen/dimen_small"
                  android:layout_marginStart="@dimen/dimen_small"
                  android:textColor="@color/colorBlackBlue"
                  android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="1dp"
                        app:cardMaxElevation="3dp"
                        app:cardCornerRadius="@dimen/dimen_small"
                  app:cardBackgroundColor="@color/colorGreyLight"
                        android:layout_marginBottom="@dimen/dimen_small"
                        android:layout_marginStart="@dimen/dimen_small"
                        android:layout_marginEnd="@dimen/dimen_small">
                        <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_margin="@dimen/dimen_small">
                              <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/his_number"
                                    android:text="number"
                                    android:background="@color/colorGreyDark"
                                    android:padding="@dimen/dimen_small"
                                    android:layout_margin="@dimen/dimen_small"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/colorWhite"/>
                              <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/his_role"
                                    android:text="role"
                                    android:background="@color/colorAccentDown"
                                    android:padding="@dimen/dimen_small"
                                    android:layout_margin="@dimen/dimen_small"
                                    android:textColor="@color/colorWhite"
                                    android:layout_alignParentEnd="true"/>

                        </RelativeLayout>
                  </androidx.cardview.widget.CardView>

            <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/his_sent"
                  android:text="sent"
                  android:layout_gravity="center_horizontal"
                  android:padding="@dimen/dimen_small"
                  android:layout_marginTop="@dimen/dimen_small"
                  android:layout_marginStart="@dimen/dimen_small"
                  android:textColor="@color/colorBlackBlue"
                  android:textStyle="bold"
                  android:visibility="gone"
                  />

      </LinearLayout>

</androidx.cardview.widget.CardView>